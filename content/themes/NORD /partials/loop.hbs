{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<article class="{{post_class}} row">
		<div class="four column">
			<a href="{{url}}"><img src="{{img_url feature_image}}" /></a>
		</div>
		<div class="eight columns">
			<header class="post-header">
					<h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
			</header>
			<section class="post-excerpt">
					<p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
			</section>
			<footer class="post-meta">
					{{#if primary_author.profile_image}}<img class="author-thumb" src="{{primary_author.profile_image}}" alt="{{primary_author.fullName}}" nopin="nopin" />{{/if}}
					{{primary_author}}
					{{tags prefix=" on "}}
					<time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
			</footer>
		</div>
</article>
{{/foreach}}
