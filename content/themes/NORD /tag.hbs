{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

<header class="main-header post-head" id="main-header">
    <nav class="main-nav {{#if feature_image}}overlay{{/if}} clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}" /></a>{{/if}}

        {{!-- Include the nav links--}}
        {{> "nav"}}
    </nav>
    <aside id="navicon">
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </aside>
		<div>
				{{#tag}}
				<div class="main-header-content inner">
						<h1 class="page-title">{{name}}</h1>
						<h2 class="page-description">
								{{#if description}}
										{{description}}
								{{else}}
										{{../pagination.total}} posts
								{{/if}}
						</h2>
				</div>
				{{/tag}}
    </div>
</header>


{{!-- The main content area on the homepage --}}
<main class="content" role="main">

    {{!-- The tag below includes the post loop - partials/loop.hbs --}}
    {{> "loop" limit="all"}}

</main>
