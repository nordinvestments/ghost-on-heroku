{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

<header class="main-header post-head" id="main-header">
  <nav class="main-nav {{#if feature_image}}overlay{{/if}} clearfix">
    {{#if @blog.logo}}<a class="blog-logo" href="{{@site.url}}"><img src="{{@site.logo}}"
        alt="{{@site.title}}" /></a>{{/if}}

    {{!-- Include the nav links--}}
    {{> "nav"}}
  </nav>
  <aside id="navicon">
    <div class="line"></div>
    <div class="line"></div>
    <div class="line"></div>
  </aside>
</header>


{{!-- The main content area on the all page --}}
<main class="content" role="main">
 <div class="full-width">
      <div class="row">
        <div class="column twelve">
            <h3 class="mere">Mere om</h3>
            <h2 class="mere-topic">ALLE</h2>
        </div>
      </div>
      <div class="row flere">
        <a class="button button-green" href="all">Flere Artikler</a>
      </div>
      <div>
      {{#get "posts" order="published_at desc" limit="all"  include="author"}}
          {{#foreach posts}}
            <article class="{{post_class}} row">
              <div class="four column">
                <a href="{{url}}"><img src="{{img_url feature_image}}" /></a>
              </div>
              <div class="eight columns">
                <header class="post-header">
                  <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
                </header>
                <section class="post-excerpt">
                  <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
                </section>
                <footer class="post-meta">
                  {{author}}
                  {{tags prefix=" on "}}
                  <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
                </footer>
              </div>
            </article>
          {{/foreach}}
        {{/get}}
      </div>
  </div>
</main>
